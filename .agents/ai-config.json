{
  "ai_assistants": {
    "claude-code": {
      "enabled": true,
      "model": "claude-3-sonnet",
      "max_tokens": 4000,
      "temperature": 0.1,
      "description": "Asistente principal de desarrollo - Claude Code",
      "specialization": ["architecture", "backend", "deployment", "documentation"],
      "cli_required": "claude-code",
      "api_key_env": "CLAUDE_API_KEY"
    },
    "copilot": {
      "enabled": false,
      "suggestions": true,
      "auto_complete": true,
      "description": "Autocompletado y sugerencias - GitHub Copilot",
      "specialization": ["autocomplete", "suggestions", "components", "frontend"],
      "cli_required": "copilot",
      "api_key_env": "GITHUB_COPILOT_TOKEN"
    },
    "avante": {
      "enabled": false,
      "analysis": true,
      "optimization": true,
      "description": "Asistente de código avanzado - Avante.nvim",
      "specialization": ["analysis", "optimization", "testing", "refactoring"],
      "cli_required": "avante",
      "api_key_env": "AVANTE_API_KEY"
    },
    "opencode": {
      "enabled": false,
      "search": true,
      "documentation": true,
      "description": "Integración con OpenCode AI",
      "specialization": ["documentation", "examples", "search", "guides"],
      "cli_required": "opencode",
      "api_key_env": "OPENCODE_API_KEY"
    },
    "code-companion": {
      "enabled": false,
      "providers": ["claude", "gpt", "gemini"],
      "auto_select": true,
      "description": "Soporte multi-AI - CodeCompanion.nvim",
      "specialization": ["multi-ai", "comparison", "fallback", "selection"],
      "cli_required": "code-companion",
      "api_key_env": "CODE_COMPANION_API_KEY"
    },
    "gemini": {
      "enabled": false,
      "model": "gemini-pro",
      "analysis": true,
      "description": "Integración con Google Gemini",
      "specialization": ["analysis", "testing", "optimization", "documentation"],
      "cli_required": "gemini-cli",
      "api_key_env": "GEMINI_API_KEY"
    }
  },
  "agent_assignments": {
    "ARCHITECT-AGENT": {
      "primary_ai": "claude-code",
      "fallback_ai": ["avante", "opencode"],
      "tasks": ["design", "architecture", "planning", "configuration"]
    },
    "UI-AGENT": {
      "primary_ai": "copilot",
      "fallback_ai": ["claude-code", "avante"],
      "tasks": ["components", "styling", "responsive", "animations"]
    },
    "BACKEND-AGENT": {
      "primary_ai": "claude-code",
      "fallback_ai": ["avante", "gemini"],
      "tasks": ["apis", "database", "integration", "authentication"]
    },
    "TEST-AGENT": {
      "primary_ai": "avante",
      "fallback_ai": ["gemini", "claude-code"],
      "tasks": ["testing", "analysis", "optimization", "quality"]
    },
    "DEPLOY-AGENT": {
      "primary_ai": "claude-code",
      "fallback_ai": ["avante", "opencode"],
      "tasks": ["deployment", "configuration", "optimization", "monitoring"]
    },
    "DOCS-AGENT": {
      "primary_ai": "opencode",
      "fallback_ai": ["claude-code", "gemini"],
      "tasks": ["documentation", "examples", "guides", "api-docs"]
    }
  },
  "subagent_assignments": {
    "DATABASE-DESIGN-AGENT": {
      "ai": "claude-code",
      "tasks": ["schema", "relationships", "optimization"]
    },
    "API-DESIGN-AGENT": {
      "ai": "claude-code",
      "tasks": ["endpoints", "contracts", "documentation"]
    },
    "CONFIG-AGENT": {
      "ai": "claude-code",
      "tasks": ["environment", "variables", "validation"]
    },
    "COMPONENT-AGENT": {
      "ai": "copilot",
      "tasks": ["react-components", "typescript", "props"]
    },
    "RESPONSIVE-AGENT": {
      "ai": "copilot",
      "tasks": ["mobile", "breakpoints", "touch-interactions"]
    },
    "ANIMATION-AGENT": {
      "ai": "avante",
      "tasks": ["framer-motion", "performance", "micro-interactions"]
    },
    "SUPABASE-AGENT": {
      "ai": "claude-code",
      "tasks": ["database", "rls", "functions", "triggers"]
    },
    "EMAIL-AGENT": {
      "ai": "claude-code",
      "tasks": ["templates", "notifications", "webhooks"]
    },
    "AUTH-AGENT": {
      "ai": "claude-code",
      "tasks": ["jwt", "policies", "middleware", "roles"]
    },
    "UNIT-TEST-AGENT": {
      "ai": "avante",
      "tasks": ["jest", "testing-library", "coverage"]
    },
    "INTEGRATION-TEST-AGENT": {
      "ai": "gemini",
      "tasks": ["api-tests", "flows", "database-tests"]
    },
    "PERFORMANCE-TEST-AGENT": {
      "ai": "avante",
      "tasks": ["lighthouse", "web-vitals", "bundle-analysis"]
    },
    "VERCEL-AGENT": {
      "ai": "claude-code",
      "tasks": ["deployment", "build-settings", "environment"]
    },
    "DNS-AGENT": {
      "ai": "claude-code",
      "tasks": ["domain", "subdomains", "records", "cdn"]
    },
    "SSL-AGENT": {
      "ai": "claude-code",
      "tasks": ["certificates", "headers", "security", "monitoring"]
    },
    "TECHNICAL-DOCS-AGENT": {
      "ai": "opencode",
      "tasks": ["architecture", "components", "apis", "diagrams"]
    },
    "USER-GUIDE-AGENT": {
      "ai": "opencode",
      "tasks": ["tutorials", "faq", "screenshots", "videos"]
    },
    "API-DOCS-AGENT": {
      "ai": "opencode",
      "tasks": ["api-docs", "examples", "postman", "openapi"]
    }
  },
  "configuration": {
    "multi_ai": {
      "enabled": false,
      "primary": "claude-code",
      "fallback": ["copilot", "avante"],
      "auto_switch": true,
      "context_aware": true
    },
    "performance": {
      "cache_responses": true,
      "parallel_requests": true,
      "timeout": 30000,
      "retry_attempts": 3
    },
    "security": {
      "encrypt_responses": true,
      "secure_storage": true,
      "api_key_rotation": 30,
      "access_control": true
    }
  },
  "requirements": {
    "node_version": ">=18.0.0",
    "cli_tools": [
      "claude-code",
      "opencode",
      "gemini-cli"
    ],
    "api_keys": [
      "CLAUDE_API_KEY",
      "GITHUB_COPILOT_TOKEN",
      "OPENCODE_API_KEY",
      "GEMINI_API_KEY"
    ]
  },
  "monitoring": {
    "enabled": true,
    "metrics": {
      "ai_performance": true,
      "response_time": true,
      "accuracy": true,
      "usage": true
    },
    "alerts": {
      "email": "your_email@example.com",
      "slack": "your_slack_webhook"
    }
  }
}
